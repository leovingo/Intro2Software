{
    "name": "Quark",
    "version": "0.0.0.1",
    "manifest_version": 3,
    "description": "An extension to display the NASA picture of the day.",
    "action": {
        "default_popup": "app/index.html"
    },
    "content_scripts": [
        {
            "matches": [
                "https://m.facebook.com/",
                "https://www.facebook.com/*"
            ],
            "js": [
                "app/main.js",
                "api/index.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "permissions": [
        "tabs",
        "activeTab",
        "storage",
        "windows",
        "webNavigation"
    ]
}
